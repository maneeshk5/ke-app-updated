<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".AssetsForm">

    <include
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/custom_titlebar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title_layout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
        >

            <TextView
                android:id="@+id/system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/andada"
                android:letterSpacing="0.1"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />




            <TextView
                android:id="@+id/instrument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/andada"
                android:letterSpacing="0.1"
                android:maxLines="1"
                android:padding="10dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Unit"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/unit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.55"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Plant"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/plant"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.55"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="KKS/Tag"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/kks_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.55"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Upper Limit"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/uLimit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.55"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Lower Limit"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/lLimit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.55"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Current Value"
                    android:textColor="@color/colorPrimary"

                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/reading_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:layout_weight="0.55"
                    android:background="@drawable/border"
                    android:fontFamily="@font/andada"
                    android:hint="Reading"
                    android:inputType="number|numberDecimal"
                    android:letterSpacing="0.1"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="#C9C9C9"
                    android:textSize="13dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/image_placeholder"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:id="@+id/img_view"
                android:visibility="gone"
                />




            <Button
                android:id="@+id/capture_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@color/colorAccent"
                android:letterSpacing="0.3"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:text="Capture Image"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:fontFamily="@font/andada"
                android:letterSpacing="0.1"
                android:text="Page 1/10"
                android:id="@+id/paging"
                android:layout_gravity="right"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>